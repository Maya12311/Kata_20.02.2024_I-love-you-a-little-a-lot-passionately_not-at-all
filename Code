public class Sid {
    public static String howMuchILoveYou(int nb_petals) {
    
 
      int caseNumber = nb_petals;
      if(nb_petals > 6 ){

     
             for(int i=nb_petals; i>6; i=i-6){

               caseNumber = i;     
      }
      }
      
      if(caseNumber > 6){
        caseNumber=caseNumber - 6;
      }
          

      String phrase = "";
      
      switch(caseNumber){
          case 1:
             phrase = "I love you";
break;
           case 2:
               phrase ="a little";
break;
            case 3:
               phrase ="a lot";
break;
            case 4:
              phrase ="passionately";
break;
            case 5:
               phrase ="madly";
break;
            case 6:
              phrase="not at all";
break;
      }

    return phrase ;
    }
}
    
